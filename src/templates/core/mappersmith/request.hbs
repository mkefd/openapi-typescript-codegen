export const {{{camelCase clientName}}}MappersmithClientFactory = ({
	host,
	middleware
}: {
	host: string,
	middleware?: Middleware[]
}) =>
	forge({
		clientId: '{{clientName}}',
		bodyAttr: 'requestBody',
		host,
		middleware,
		resources: {
		{{#each services}}
			{{name}}: {
			{{#each operations}}
				{{name}}: { method: '{{method}}', path: '{{path}}'{{#if hasDefault}}, params: {
				{{#each parameters}}
					{{#if default}}
						{{{name}}}: {{{default}}},
					{{/if}}
				{{/each}}
				}{{/if}} },
			{{/each}}
			},
		{{/each}}
		},
	}) as {{{clientName}}}Client;
